<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MateMania.MenuPage"
             NavigationPage.HasBackButton="False"
             BackgroundColor="{StaticResource Secondary}">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>
    <VerticalStackLayout
        Spacing="23"
        Padding="30,0"
        Margin="0,20,0,0"
        VerticalOptions="Start">
        <Border BackgroundColor="{StaticResource Gray100}">
            <ImageButton x:Name="imgPostava" MaximumHeightRequest="200" Clicked="imgPostava_Clicked"/>
        </Border>
        <Label
            x:Name="lbUzivPrezdivka"
            Text="Awertol"
            Margin="0,10,0,10"
            FontSize="20"
            FontAttributes="Bold"
            VerticalOptions="Start" 
            HorizontalOptions="Center" />
        <Label
            x:Name="lbUzivTitul"
            Margin="0,10,0,10"
            FontSize="17"
            TextColor="Gold"
            VerticalOptions="Start" 
            HorizontalOptions="Center" />
        <ProgressBar x:Name="pbUzivExp" ProgressColor="{StaticResource Yellow100Accent}" MinimumHeightRequest="15"/>
        <Button x:Name="btnProcvicovani" FontAttributes="Bold" FontSize="24" Text="PROCVIČOVÁNÍ" BackgroundColor="{StaticResource Primary}" TextColor="Black" Clicked="btnProcvicovani_Clicked"/>
        <Button x:Name="btnOnline" FontAttributes="Bold" FontSize="24" Text="ONLINE" BackgroundColor="{StaticResource Primary}" TextColor="Black"  Clicked="btnOnline_Clicked"/>
        <Button x:Name="btnVysledky" FontAttributes="Bold" FontSize="24" Text="MEDAILE" BackgroundColor="{StaticResource Primary}" TextColor="Black"  Clicked="btnVysledky_Clicked"/>
        <Button x:Name="btnTituly" FontAttributes="Bold" FontSize="24" Text="TITULY" BackgroundColor="{StaticResource Primary}" TextColor="Black"  Clicked="btnTituly_Clicked"/>
        <Button x:Name="btnAktualizovat" FontSize="28" Text="🔃" Margin="-5" BackgroundColor="{StaticResource Secondary}" Clicked="btnAktualizovat_Clicked"/>
    </VerticalStackLayout>
</ContentPage>