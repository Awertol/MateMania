<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MateMania.TeacherMenuPage"
             BackgroundColor="{StaticResource Secondary}">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>
    <VerticalStackLayout>
        <Label 
            Text="REŽIM UČITELE"
            VerticalOptions="Start"
            FontSize="40"
            HorizontalOptions="Center" />
        <Button x:Name="btnVytvoritZadani" Text="Vytvořit zadání" Clicked="btnVytvoritZadani_Clicked"/>
        <Button x:Name="btnVygenerovatZadani" Text="Vygenerovat zadání" Clicked="btnVygenerovatZadani_Clicked"/>
        <Button x:Name="btnVysledkyZaku" Text="Výsledky žáků" Clicked="btnVysledkyZaku_Clicked"/>
        <Button x:Name="btnPrehledyTridy" Text="Přehledy ZŠ" Clicked="btnPrehledyTridy_Clicked"/>
        <Button x:Name="btnMenu" Text="MENU" Clicked="btnMenu_Clicked"/>
    </VerticalStackLayout>
</ContentPage>