<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MateMania.AvatarPage"
             Title="AvatarPage">
    <VerticalStackLayout
        Spacing="15"
        Padding="30,0"
        Margin="0,60,0,0"
        VerticalOptions="Start">
        <Label 
            Text="AVATAR"
            FontSize="48"
            VerticalOptions="Start" 
            HorizontalOptions="Center">
            <Label.Shadow>
                <Shadow Brush="Black"
                Offset="20,20"
                Radius="40"
                Opacity="0.8" />
            </Label.Shadow>
        </Label>
        <Border BackgroundColor="{StaticResource Gray100}">
            <Image x:Name="imgPostava" MaximumHeightRequest="120" Margin="5" Source="amogus.png"/>
        </Border>
        <Label Text="GALERIE" HorizontalOptions="Center" FontAttributes="Bold" FontSize="28"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <ImageButton x:Name="imgVolba1" MaximumHeightRequest="60" Grid.Row="0" Grid.Column="0" Source="amogus.png"/>
            <ImageButton x:Name="imgVolba2" MaximumHeightRequest="60" Grid.Row="1" Grid.Column="0" Source="amogusred.png" IsEnabled="False"/>
            <ImageButton x:Name="imgVolba3" MaximumHeightRequest="60" Grid.Row="2" Grid.Column="0" Source="amogusred.png" IsEnabled="False"/>
            <ImageButton x:Name="imgVolba4" MaximumHeightRequest="60" Grid.Row="3" Grid.Column="0" Source="amogusred.png" IsEnabled="False"/>
            <ImageButton x:Name="imgVolba5" MaximumHeightRequest="60" Grid.Row="4" Grid.Column="0" Source="amogusred.png" IsEnabled="False"/>
            <ImageButton x:Name="imgVolba6" MaximumHeightRequest="60" Grid.Row="5" Grid.Column="0" Source="amogusred.png" IsEnabled="False"/>
            <Label Text="LEVEL 1" FontAttributes="Bold" FontSize="28" Grid.Row="0" Grid.Column="1"/>
            <Label Text="LEVEL 2" FontAttributes="Bold" FontSize="28" Grid.Row="1" Grid.Column="1"/>
            <Label Text="LEVEL 3" FontAttributes="Bold" FontSize="28" Grid.Row="2" Grid.Column="1"/>
            <Label Text="LEVEL 4" FontAttributes="Bold" FontSize="28" Grid.Row="3" Grid.Column="1"/>
            <Label Text="LEVEL 5" FontAttributes="Bold" FontSize="28" Grid.Row="4" Grid.Column="1"/>
            <Label Text="LEVEL 6" FontAttributes="Bold" FontSize="28" Grid.Row="5" Grid.Column="1"/>
            <Label x:Name="lbVolba1Odemknuti" Text="✅" FontSize="32" Grid.Row="0" Grid.Column="2"/>
            <Label x:Name="lbVolba2Odemknuti" Text="⌛" FontSize="32" Grid.Row="1" Grid.Column="2"/>
            <Label x:Name="lbVolba3Odemknuti" Text="⌛" FontSize="32" Grid.Row="2" Grid.Column="2"/>
            <Label x:Name="lbVolba4Odemknuti" Text="⌛" FontSize="32" Grid.Row="3" Grid.Column="2"/>
            <Label x:Name="lbVolba5Odemknuti" Text="⌛" FontSize="32" Grid.Row="4" Grid.Column="2"/>
            <Label x:Name="lbVolba6Odemknuti" Text="⌛" FontSize="32" Grid.Row="5" Grid.Column="2"/>
        </Grid>
        <Button x:Name="btnMenu" Text="MENU" FontSize="28" Clicked="btnMenu_Clicked"/>
    </VerticalStackLayout>
</ContentPage>