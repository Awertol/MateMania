<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MateMania.OnlinePinPage"
             BackgroundColor="{StaticResource Secondary}">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>
    <VerticalStackLayout
        Spacing="15"
        Padding="30,0"
        Margin="0,30,0,0"
        VerticalOptions="Start">
        <Label 
            Text="ONLINE PROCVIČOVÁNÍ"
            FontAttributes="Bold"
            VerticalOptions="Start" 
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            FontSize="40"/>
        <Label 
            Text="ZADÁNÍ KÓDU"
            VerticalOptions="Start" 
            HorizontalOptions="Center"
            FontAttributes="Bold"
            FontSize="18"/>
        <Grid x:Name="grdPin" BackgroundColor="Cyan">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Stroke="Black" StrokeThickness="1" Grid.Column="0" Grid.Row="0" Margin="2" Padding="10" HeightRequest="60">

            </Border>
            <Border Stroke="Black" StrokeThickness="1" Grid.Column="1" Grid.Row="0" Margin="2" Padding="10">
                
            </Border>
            <Border Stroke="Black" StrokeThickness="1" Grid.Column="2" Grid.Row="0" Margin="2" Padding="10">
                
            </Border>
            <Border Stroke="Black" StrokeThickness="1" Grid.Column="3" Grid.Row="0" Margin="2" Padding="10">
                
            </Border>
            <Border Stroke="Black" StrokeThickness="1" Grid.Column="4" Grid.Row="0" Margin="2" Padding="10">
                
            </Border>
        </Grid>
        <Grid BackgroundColor="{StaticResource Gray100}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border Grid.Column="0" Grid.Row="0">
                <Button ClassId="1" MaximumHeightRequest="70" MinimumHeightRequest="60" MaximumWidthRequest="65" Text="🍀" FontSize="36" Clicked="btnVolba_Clicked"
                        BackgroundColor="{StaticResource Tertiary}"/>
            </Border>
            <Border Grid.Column="1" Grid.Row="0">
                <Button ClassId="2" MaximumHeightRequest="70" MinimumHeightRequest="60" MaximumWidthRequest="65" Text="💚" FontSize="36" Clicked="btnVolba_Clicked"
                        BackgroundColor="{StaticResource Tertiary}"/>
            </Border>
            <Border Grid.Column="2" Grid.Row="0">
                <Button ClassId="3" MaximumHeightRequest="70" MinimumHeightRequest="60" MaximumWidthRequest="65" Text="🌵" FontSize="36" Clicked="btnVolba_Clicked"
                        BackgroundColor="{StaticResource Tertiary}"/>
            </Border>
            <Border Grid.Column="0" Grid.Row="1">
                <Button ClassId="4" MaximumHeightRequest="70" MinimumHeightRequest="60" MaximumWidthRequest="65" Text="❤️" FontSize="36" Clicked="btnVolba_Clicked"
                        BackgroundColor="{StaticResource Tertiary}"/>
            </Border>
            <Border Grid.Column="1" Grid.Row="1">
                <Button ClassId="5" MaximumHeightRequest="70" MinimumHeightRequest="60" MaximumWidthRequest="65" Text="🐧" FontSize="36" Clicked="btnVolba_Clicked"
                        BackgroundColor="{StaticResource Tertiary}"/>
            </Border>
            <Border Grid.Column="2" Grid.Row="1">
                <Button ClassId="6" MaximumHeightRequest="70" MinimumHeightRequest="60" MaximumWidthRequest="65" Text="💙" FontSize="36" Clicked="btnVolba_Clicked"
                        BackgroundColor="{StaticResource Tertiary}"/>
            </Border>
            <Border Grid.Column="0" Grid.Row="2">
                <Button ClassId="7" MaximumHeightRequest="70" MinimumHeightRequest="60" MaximumWidthRequest="65" Text="☀️" FontSize="36" Clicked="btnVolba_Clicked"
                        BackgroundColor="{StaticResource Tertiary}"/>
            </Border>
            <Border Grid.Column="1" Grid.Row="2">
                <Button ClassId="8" MaximumHeightRequest="70" MinimumHeightRequest="60" MaximumWidthRequest="65" Text="🥇" FontSize="36" Clicked="btnVolba_Clicked"
                        BackgroundColor="{StaticResource Tertiary}"/>
            </Border>
            <Border Grid.Column="2" Grid.Row="2">
                <Button ClassId="9" MaximumHeightRequest="70" MinimumHeightRequest="60" MaximumWidthRequest="65" Text="🌙" FontSize="36" Clicked="btnVolba_Clicked"
                        BackgroundColor="{StaticResource Tertiary}"/>
            </Border>
        </Grid>
        <Button x:Name="btnMenu" FontSize="24" FontAttributes="Bold" Text="ZPĚT" Clicked="btnMenu_Clicked"/>
    </VerticalStackLayout>
</ContentPage>