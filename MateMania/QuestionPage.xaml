<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MateMania.QuestionPage"
             Title="QuestionPage">
    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        Margin="0,60,0,0"
        VerticalOptions="Start">
        <Label 
            Text="ZÁHADA"
            VerticalOptions="Start" 
            HorizontalOptions="Center" />
        <StackLayout HorizontalOptions="Center" Padding="100,10,100,10" BackgroundColor="{StaticResource Gray100}">
            <Label x:Name="lbOtazka" FontSize="24" Margin="4"/>
            <Label HeightRequest="5" BackgroundColor="{StaticResource Primary}" Padding="100,0,100,0"/>
            <Label Text="Myslím si ..." FontAttributes="Bold"/>
            <Border StrokeThickness="1" Stroke="Black">
                <Entry x:Name="entryOdpovedZahada" FontSize="24" HorizontalOptions="Center" VerticalOptions="Start" Keyboard="Chat"/>
            </Border>
            <Button x:Name="btnOdpovedZahada" FontSize="48" FontAttributes="Bold" Text="MÁM TO!" Clicked="btnOdpovedZahada_Clicked"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>